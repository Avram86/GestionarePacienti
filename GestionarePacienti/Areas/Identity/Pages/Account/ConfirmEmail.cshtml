@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm email";
}

@if (Model.ConfirmSuccess)
{
    <h1>Email confirmed!</h1>
    <p>Your email was successfully confirmed. Please <a id="login" asp-area="Identity" asp-page="/Account/Login" style="text-decoration: underline; color: coral;">Login</a> to access site functionality. </p>
}
else
{
    <h1>Email confirm error</h1>
    <p>
        @Html.Raw(Model.StatusMessage)
    </p>
}

