@model IEnumerable<GestionarePacienti.Data.Entities.Doctor>

@{
    ViewData["Title"] = "Doctors";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Doctors</h1>

<p>
    <a asp-action="Create" style="text-decoration: underline; color: coral;">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specialization)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialization)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" style="text-decoration: underline; color: coral;">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id" style="text-decoration: underline; color: coral;">Details</a> 
                @if (User.IsInRole("admin"))
                {
                <span>| </span> <a asp-action="Delete" asp-route-id="@item.Id" style="text-decoration: underline; color: coral;">Delete</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
